<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PinCodeField">
        <attr name="pcf_max_len" format="integer|reference" />
        <attr name="pcf_letter_spacing" format="dimension|reference" />
        <attr name="pcf_size" format="dimension|reference" />

        <attr name="pcf_style">
            <enum name="stroke" value="1" />
            <enum name="fill" value="0" />
        </attr>
        <attr name="pcf_color" format="color" />
        <attr name="pcf_fill_color" format="color" />
        <attr name="pcf_max_try" format="integer" />
        <attr name="pcf_stroke_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="KeyboardView">
        <attr name="kv_color_style">
            <enum name="light" value="0" />
            <enum name="dark" value="1" />
            <enum name="custom" value="2" />
        </attr>
        <attr name="kv_form_style">
            <enum name="round" value="0" />
            <enum name="square" value="1" />
            <enum name="square_no_borders" value="2" />
            <enum name="round_no_borders" value="3" />
        </attr>
        <attr name="kv_custom_color" format="color" />
        <attr name="kv_button_text_size" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="PinPadView">
        <attr name="ppv_color" format="color" />
        <attr name="ppv_buttons_text_size" format="dimension|reference" />
        <attr name="ppv_keyboard_form_style">
            <enum name="round" value="0" />
            <enum name="square" value="1" />
            <enum name="square_no_borders" value="2" />
            <enum name="round_no_borders" value="3" />
        </attr>
    </declare-styleable>
</resources>